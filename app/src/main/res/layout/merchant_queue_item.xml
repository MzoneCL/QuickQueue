<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_sculpture_in_queue_list"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/merchant_queue_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马小跳"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_sculpture_in_queue_list"/>

        <TextView
            android:id="@+id/seq_number_in_queue_list"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="0"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/merchant_queue_item_username" />



    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/progress_bar_login_merchant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/login_form_merchant"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ImageButton
                android:id="@+id/back_to_start_from_merchant_login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@mipmap/back"
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商家登录"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#fff"
                android:padding="10dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone" />
            <EditText
                android:id="@+id/account_merchant_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="账号"
                android:maxLines="1"
                android:layout_toRightOf="@id/phone"/>
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/password" />
            <EditText
                android:id="@+id/password_merchant_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:maxLines="1"
                android:layout_toRightOf="@id/lock"
                android:inputType="textPassword"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/button_forget_merchant_login"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="忘记了？"
                android:textSize="17dp"
                android:background="@drawable/button_shape1"
                android:textColor="#000"/>
            <Button
                android:id="@+id/button_login_merchant"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="17dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_shape"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:layout_marginRight="55dp">
            <CheckBox
                android:id="@+id/remember_password_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<!--有队列时显示-->
<LinearLayout android:id="@+id/queue_when_in_queue"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000" />

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家"/>

                <TextView
                    android:id="@+id/merchant_name_in_footmark"
                    android:layout_toLeftOf="@id/merchant_info_btn_in_footmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="某某商家" />

                <ImageButton
                    android:id="@+id/merchant_info_btn_in_footmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#fff"
                    android:src="@drawable/arrow_go" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#aaa" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待时间"/>

                <TextView
                    android:id="@+id/waited_time_in_footmark"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="5min" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#aaa" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排队号码"/>

                <TextView
                    android:id="@+id/waited_number_in_footmark"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="12" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2px"
                android:background="#aaa" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="排队日期"/>

                <TextView
                    android:id="@+id/date_in_footmark"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="2018.12.13" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000" />





        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>